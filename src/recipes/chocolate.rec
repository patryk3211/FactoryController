name=Chocolate
init:
output chocolate
base_fluid milk
ingredient sugar 8
ingredient cocoa_beans 8
wait time 1.5
ingredient sugar 8
ingredient cocoa_beans 8
wait idle
loop:
spin_basin
pump_out
wait event output_tank_empty
spin_basin
pump_in
wait event liquid_empty
spin_basin
ingredient cocoa_beans 8
wait event basin_ready
ingredient cocoa_beans 8
ingredient sugar 8
spin_basin
wait time 1.5
ingredient sugar 8
wait event basin_ready
wait time 11.5
